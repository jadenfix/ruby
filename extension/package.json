{
  "name": "gemhub-extension",
  "displayName": "GemHub",
  "description": "Developer-facing UX for GemHub - Ruby gem marketplace, sandbox, and benchmarks",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gemhub.wizard",
        "title": "GemHub: Create New Gem"
      },
      {
        "command": "gemhub.create",
        "title": "GemHub: Generate Gem Scaffold"
      },
      {
        "command": "gemhub.benchmark",
        "title": "GemHub: Run Benchmarks"
      },
      {
        "command": "gemhub.openMarketplace",
        "title": "GemHub: Open Marketplace"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "gemhubSidebar",
          "name": "GemHub",
          "when": "resourceExtname"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gemhub",
          "title": "GemHub",
          "icon": "$(ruby)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "gemhub.wizard"
        },
        {
          "command": "gemhub.create"
        },
        {
          "command": "gemhub.benchmark"
        }
      ]
    }
  },
  "scripts": {
    "dev": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "lint": "eslint src --ext ts --max-warnings=0",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "@types/d3": "^7.4.0",
    "d3": "^7.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.0"
  }
}
