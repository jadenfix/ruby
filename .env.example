# GemHub Environment Configuration
# Copy this file to .env and configure with your actual values

# Anthropic API Configuration (required for Lane D LLM Gateway)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MODEL=claude-3-haiku-20240307

# API Security
API_TOKEN=dev-token-123

# Database Configuration  
POSTGRES_PASSWORD=dev-password

# Development Settings
RACK_ENV=development
PYTHONPATH=/app

# Vector Store Configuration
VECTOR_STORE_PATH=/app/data

# Continue.dev Integration (optional)
CONTINUE_API_KEY=your_continue_dev_api_key_here

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token_here

# Service Ports (for reference)
# API: 4567
# LLM Gateway: 8001  
# Vector Store: 8002
# CVE Scanner: 8003

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security Settings
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
